<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/fieldbr">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="850dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/field_br" />

    <FrameLayout
        android:id="@+id/red_auto"
        android:layout_width="375dp"
        android:layout_height="470dp" />

    <FrameLayout
        android:id="@+id/blue_auto"
        android:layout_width="375dp"
        android:layout_height="470dp"
        android:layout_marginStart="475dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blue_starting_position">
        <RadioButton
            android:id="@+id/blue_starting_position_left"
            android:layout_width="50dp"
            android:layout_height="111dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/rb_starting_position_blue_selector"
            android:button="@null"
            android:onClick="onClickStartingPosition"/>
        <RadioButton
            android:id="@+id/blue_starting_position_center"
            android:layout_width="51dp"
            android:layout_height="111dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/rb_starting_position_blue_selector"
            android:button="@null"
            android:onClick="onClickStartingPosition"/>
        <RadioButton
            android:id="@+id/blue_starting_position_right"
            android:layout_width="51dp"
            android:layout_height="111dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rb_starting_position_blue_selector"
            android:button="@null"
            android:onClick="onClickStartingPosition"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red_starting_position">
        <RadioButton
            android:id="@+id/red_starting_position_right"
            android:layout_width="50dp"
            android:layout_height="114dp"
            android:layout_marginStart="792dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rb_starting_position_red_selector"
            android:button="@null"
            android:onClick="onClickStartingPosition"/>
        <RadioButton
            android:id="@+id/red_starting_position_center"
            android:layout_width="50dp"
            android:layout_height="114dp"
            android:layout_marginStart="792dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rb_starting_position_red_selector"
            android:button="@null"
            android:onClick="onClickStartingPosition"/>
        <RadioButton
            android:id="@+id/red_starting_position_left"
            android:layout_width="48dp"
            android:layout_height="108dp"
            android:layout_marginStart="795dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/rb_starting_position_red_selector"
            android:button="@null"
            android:onClick="onClickStartingPosition"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:id="@+id/bottomBtnLayout">
        <Button
            android:id="@+id/btn_dropped"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_drop_selector"
            android:text="DROP"
            android:textSize="30dp"
            android:onClick="onClickDrop"/>
        <Button
            android:id="@+id/btn_spilled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_spill_selector"
            android:text="SPILL - 0"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/btn_dropped"
            android:onClick="onClickSpill"/>
        <Button
            android:id="@+id/btn_fouled"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_foul_selector"
            android:text="FOUL- 0"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/btn_spilled"
            android:onClick="onClickFoul"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_undo"
            android:layout_toRightOf="@+id/btn_fouled"
            android:text="UNDO"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_undo_selector"
            android:onClick="onClickUndo"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sideBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imageView"
        android:layout_above="@+id/bottomBtnLayout"
        android:layout_marginBottom="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timerLayout">
            <TextView
                android:id="@+id/tv_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="AUTO"
                android:textSize="25dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="15"
                android:textSize="35dp"
                android:textAlignment="center"
                android:layout_below="@+id/tv_activity"
                android:textColor="@color/black" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_edit_data"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/timerLayout"
            android:text="EDIT"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_edit_selector"
            android:onClick="onClickEdit"/>
        <Button
            android:id="@+id/btn_ftb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_edit_data"
            android:text="Climb"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_ftb_selector"
            android:onClick="onClickClimb"/>
        <ToggleButton
            android:id="@+id/tgbtn_incap"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_ftb"
            android:textOn="INCAP"
            android:textOff="INCAP"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/tbtn_incap_selector"
            android:onClick="onClickIncap"/>
        <TextView
            android:id="@+id/tv_teamNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="TEAM"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_below="@+id/tgbtn_incap"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btn_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:layout_below="@+id/tgbtn_incap"
            android:background="@drawable/arrow"
            android:enabled="false"
            android:visibility="invisible"
            android:onClick="onClickDataCheck"/>
    </RelativeLayout>
</RelativeLayout>