<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id= "@+id/incapTypes"
        android:text= "Type of Incap:"
        android:textSize= "30dp"
        android:textColor= "#000000"
        android:layout_margin="20dp"
        />

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/radioGroup00"
        android:layout_below="@+id/incapTypes">
        <RadioButton
            android:id="@+id/radio_button01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipped Over"
            android:textSize="25dp"
            />
        <RadioButton
            android:id="@+id/radio_button02"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Stop"
            android:textSize="25dp"
            />
        <RadioButton
            android:id="@+id/radio_button03"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stuck on Hab"
            android:textSize="25dp"
            />
        <RadioButton
            android:id="@+id/radio_button04"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stuck on Object"
            android:textSize="25dp"
            />
        <RadioButton
            android:id="@+id/radio_button05"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Control"
            android:textSize="25dp"
            />
        <RadioButton
            android:id="@+id/radio_button06"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broken Mechanism"
            android:textSize="25dp"
            />
        <RadioButton
            android:id="@+id/radio_button07"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Game Pieces"
            android:textSize="25dp"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/radioGroup00"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text= "Cancel"
            android:textSize="25dp"
            android:layout_below="@+id/radioGroup00"
            android:layout_margin="15dp"
            android:id= "@+id/cancelIncapButton"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text= "Done"
            android:textSize="25dp"
            android:layout_below="@+id/radioGroup00"
            android:layout_margin="15dp"
            android:id= "@+id/okayButton"
            android:layout_alignParentRight="true"
            />




    </LinearLayout>

</RelativeLayout>
