<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/field">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="850dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/field_intake_blue_left" />

    <FrameLayout
        android:id="@+id/left_storm"
        android:layout_width="130dp"
        android:layout_height="470dp" />

    <FrameLayout
        android:id="@+id/right_storm"
        android:layout_width="130dp"
        android:layout_height="470dp"
        android:layout_marginStart="720dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:id="@+id/bottomBtnLayout">
        <Button
            android:id="@+id/btn_dropped"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_drop_selector"
            android:text="DROP"
            android:textSize="30dp"
            android:onClick="onClickDrop"/>
        <Button
            android:id="@+id/btn_foul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_foul_selector"
            android:text="PIN FOUL - 0"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/btn_dropped"
            android:enabled="false"
            android:onClick="onClickFoul"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_undo"
            android:layout_toRightOf="@+id/btn_foul"
            android:text="UNDO"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_undo_selector"
            android:onClick="onClickUndo"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sideBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imageView"
        android:layout_above="@+id/bottomBtnLayout"
        android:layout_marginBottom="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timerLayout">
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="15"
                android:textSize="35dp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:textColor="@color/black" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_climb"
            android:layout_below="@+id/timerLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="CLIMB"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_climb"
            android:enabled="false"
            android:onClick="onClickClimb"/>
        <ToggleButton
            android:id="@+id/tbtn_defense"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_climb"
            android:textOn="DEF"
            android:textOff="DEF"
            android:textSize="30dp"
            android:textAlignment="center"
            android:enabled= "false"
            android:background="@drawable/btn_defense"
            android:onClick="onClickDefense"/>
        <ToggleButton
            android:id="@+id/tbtn_incap"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/tbtn_defense"
            android:textOn="INCAP"
            android:textOff="INCAP"
            android:textSize="30dp"
            android:enabled="false"
            android:textAlignment="center"
            android:background="@drawable/tbtn_incap_selector"
            android:onClick="onClickIncap"/>
        <TextView
            android:id="@+id/tv_teamNum"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:paddingTop="10dp"
            android:text="TEAM"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_below="@+id/tbtn_incap"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/btn_arrow"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="65dp"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:layout_below="@+id/tbtn_incap"
            android:background="@drawable/arrow"
            android:enabled="false"
            android:visibility="invisible"
            android:onClick="onClickDataCheck"/>
    </RelativeLayout>

    <Button
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:id="@+id/btn_cyclesDefended"
        android:text="FAILED PLACEMENTS/DROPS CAUSED - 0"
        android:textSize="30dp"
        android:textAlignment="center"
        android:onClick="onClickCyclesDefended"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:enabled="false"/>
</RelativeLayout>