<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="#ffffff">

    <Button
        android:id="@+id/btn_defended"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="DEFENDED"
        android:layout_margin="5dp"
        android:onClick="onClickDropDefended" />
    <Button
        android:id="@+id/btn_notDefended"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:text="NOT DEFENDED"
        android:layout_below="@+id/btn_defended"
        android:layout_margin="5dp"
        android:onClick="onClickDropNotDefended" />

</RelativeLayout>