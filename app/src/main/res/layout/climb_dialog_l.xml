<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/attemptedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="left"
        android:layout_marginStart="85dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Attempted"
        android:textSize="25dp"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:id="@+id/attemptedButtonBody"
        android:layout_width="225dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/attemptedText"
        android:gravity="left">

        <Button
            android:id="@+id/twoa"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="-5dp"
            android:text="2"
            android:textSize="20sp"
            android:onClick="onClicktwoAI"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="75sp"
            android:layout_height="65sp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/twoa"
            android:text="3"
            android:textSize="20sp"
            android:onClick="onClickthreeI"
            />

        <Button
            android:id="@+id/twob"
            android:layout_width="75sp"
            android:layout_height="65sp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/twoa"
            android:text="2"
            android:textSize="20sp"
            android:onClick="onClicktwoBI"
            />
        <Button
            android:id="@+id/one"
            android:layout_width="75dp"
            android:layout_height="200sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/twoa"
            android:text="1"
            android:textSize="20sp"
            android:onClick="onClickoneI"
            />
        <Button
            android:id="@+id/zero"
            android:layout_width="75dp"
            android:layout_height="200sp"
            android:layout_centerVertical="true"
            android:text="none"
            android:background="@drawable/button_border_dash"
            android:layout_toEndOf="@+id/one"
            android:textSize="15sp"
            android:onClick="onClicknoneI"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/theSpaceBetweenUs"
        android:layout_below="@+id/attemptedButtonBody"
        android:gravity="left"
        android:text="  "
        android:paddingTop="20dp"/>


    <LinearLayout
        android:id="@+id/attemptedDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/theSpaceBetweenUs"
        android:layout_marginStart="20dp"
        android:gravity="left">

        <Button
            android:id="@+id/SpaceOne"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:background="@drawable/button_border_line"
            android:textSize="20sp"
            android:onClick="onClickspaceOneI"
            />
        <Button
            android:id="@+id/SpaceTwo"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:background="@drawable/button_border_line"
            android:textSize="20sp"
            android:onClick="onClickspaceTwoI"

            />
        <Button
            android:id="@+id/SpaceThree"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:background="@drawable/button_border_line"
            android:onClick="onClickspaceThreeI"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/attemptDisplayTitle"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actualDisplay"
        android:layout_marginStart="45dp"
        >

        <TextView
            android:id="@+id/SpaceOneTextI"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Self"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/SpaceTwoTextI"
            android:layout_width="150dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Other Bots"
            android:textSize="20sp"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/actualText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="110dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Actual"
        android:textSize="25dp"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:id="@+id/actualButtonBody"
        android:layout_width="225dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/attemptedText"
        android:layout_marginStart="300dp"
        >
        <Button
            android:id="@+id/twoaII"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="-5dp"
            android:text="2"
            android:textSize="20sp"
            android:onClick="onClicktwoAII"

            />
        <Button
            android:id="@+id/threeII"
            android:layout_width="75sp"
            android:layout_height="65sp"
            android:layout_centerVertical="true"
            android:text="3"
            android:textSize="20sp"
            android:onClick="onClickthreeII"
            />

        <Button
            android:id="@+id/twobII"
            android:layout_width="75sp"
            android:layout_height="65sp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/twoaII"
            android:text="2"
            android:textSize="20sp"
            android:onClick="onClicktwoBII"
            />
        <Button
            android:id="@+id/oneII"
            android:layout_width="75dp"
            android:layout_height="200sp"
            android:layout_centerVertical="true"
            android:text="1"
            android:layout_toEndOf="@+id/twoaII"
            android:textSize="20sp"
            android:onClick="onClickoneII"
            />

        <Button
            android:id="@+id/zeroII"
            android:layout_width="75dp"
            android:layout_height="200sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/oneII"

            android:text="none"
            android:background="@drawable/button_border_dash"
            android:textSize="15sp"
            android:onClick="onClicknoneII"

            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/actualDisplay"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/theSpaceBetweenUs"
        android:layout_marginStart="300dp"
        >

        <Button
            android:id="@+id/SpaceOneII"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:background="@drawable/button_border_line"
            android:textSize="20sp"
            android:onClick="onClickspaceOneII"
            />
        <Button
            android:id="@+id/SpaceTwoII"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:background="@drawable/button_border_line"
            android:textSize="20sp"
            android:onClick="onClickspaceTwoII"

            />
        <Button
            android:id="@+id/SpaceThreeII"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text=" "
            android:background="@drawable/button_border_line"
            android:textSize="20sp"
            android:onClick="onClickspaceThreeII"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/actualDisplayTitle"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actualDisplay"
        android:layout_marginStart="320dp"
        >

        <TextView
            android:id="@+id/SpaceOneTextII"
            android:layout_width="75dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Self"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/SpaceTwoTextII"
            android:layout_width="150dp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Other Bots"
            android:textSize="20sp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doneLine"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FAA2A8"
            android:text="Cancel"
            android:textSize="15dp"
            android:padding="10dp"
            android:id="@+id/cancelButton"

            />
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:backgroundTint="#BBEDC5"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="15dp"
            android:padding="10dp"
            android:id="@+id/doneButton"/>
    </LinearLayout>
</RelativeLayout>