<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/normalButtonStroke" />
            <gradient android:angle="-45" android:startColor="@color/normalButtonStart" android:endColor="@color/normalButtonFocused"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/normalButtonStroke" />
            <solid android:color="@color/normalButtonFocused"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/black" />
            <gradient android:angle="-45" android:startColor="@color/normalButtonStart" android:endColor="@color/normalButtonEnd" />
        </shape>
    </item>
</selector>